{
  "schemaVersion": 1,
  "id": "sam",
  "version": "${version}",
  "name": "Summon A Minion",
  "description": "Adds a bunch of items, Blocks and entities related to the summoner class in Terraria! Summon your own minion army and defeat your foes.",
  "authors": [
    "Mayaqq"
  ],
  "contact": {
    "repo": "https://github.com/MayaqqDev/Summon-a-Minion",
    "sources": "https://github.com/MayaqqDev/Summon-a-Minion"
  },
  "license": "LGPL-3.0",
  "icon": "assets/sam/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "dev.mayaqq.sam.client.SummonAMinionClient"
    ],
    "main": [
      "dev.mayaqq.sam.SummonAMinion"
    ],
    "preLaunch": [
      "dev.mayaqq.sam.SummonAMinionPreLaunch"
    ],
    "fabric-datagen": [
      "dev.mayaqq.sam.datagen.SamDatagen"
    ],
    "modmenu": [
      "dev.mayaqq.sam.compat.ModMenuIntegration"
    ]
  },
  "mixins": [
    "sam.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.21",
    "fabric": "*",
    "minecraft": "1.20.1",
    "trinkets": "*",
    "yet_another_config_lib_v3": "*"
  },
  "recommends": {
    "emi": "*",
    "modmenu": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/w7PpGax9Bq"
      }
    }
  }
}
