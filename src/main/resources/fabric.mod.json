  "authors": [
    "Mayaqq"
  ],
  "contact": {
    "repo": "https://github.com/MayaqqDev/Summon-a-Minion",
    "sources": "https://github.com/MayaqqDev/Estrogen"
  },
  "license": "LGPL-3.0",
  "icon": "assets/sam/icon.png",
